<!DOCTYPE html>
<html>
<head>
  <title>Testapp | F22labs</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Office Space Rent', root_path, class: 'navbar-brand' %>
      <%= link_to 'Create Listing', new_room_path, class: 'navbar-brand' %>

    </div>
    <div id="navbar">
      <% if current_user %>
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to "View Rooms", rooms_path, class: 'navbar-brand' %></li>
            <li><%= link_to 'Profile', new_profile_path, class: 'navbar-brand' %></li>
            <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
            <li><%= link_to 'User Detail', welcome_user_detail_path %></li>
            <li><%= link_to 'Log Out', signout_path, method: :delete %></li>
          </ul>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>

  <%= yield %>

  <script>
      $(document).ready(function() {
          $(".reservation").click(function()
          {
              alert("Reservation is clicked !!");
              return false;
          });
      });
  </script>
</body>
</html>
